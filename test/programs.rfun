
--data N = Z | S(n)

inc Z =^= S(Z)
inc S(np) =^= 
		let npp = inc np 
		in  S(npp)

-- fib :: N -> N * N
fib Z    =^= {S(Z),S(Z)}
fib S(m) =^= 
		let {x,y} = fib m 
		in plus {y,x}

plus {x,y} =^= 
    case y of
		Z    -> |{x}|
		S(u) -> let {xp,up} = plus {x,u} in {xp, S(up)}

